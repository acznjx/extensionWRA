{
  "manifest_version": 2,
  "name": "Extensão Agent Relationship | Color Tasks",
  "version": "1.0",
  "description": "Destaca o responsável do card com o background colorido.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://wra-usa.bitrix24.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["style.css"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "color-tasks@yourdomain.com",
      "strict_min_version": "91.0"
    }
  }
}
